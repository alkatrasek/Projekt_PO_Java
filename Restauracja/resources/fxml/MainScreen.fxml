<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane id="mainBorderPane" fx:id="mainBorderPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" stylesheets="@../restauracja/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="restauracja.controllers.MainController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Program">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#exit" text="Zamknij" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Narzędzia">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#loadSala" text="Sala" />
						<MenuItem mnemonicParsing="false" onAction="#loadKuchnia" text="Kuchnia" />
						<MenuItem mnemonicParsing="false" onAction="#loadEdycja" text="Edycja Menu" />
						<MenuItem mnemonicParsing="false" onAction="#loadStatystyki" text="Statystyka" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Język">
					<items>
						<RadioMenuItem mnemonicParsing="false" selected="true" text="Polski">
							<toggleGroup>
								<ToggleGroup fx:id="jezyki" />
							</toggleGroup>
						</RadioMenuItem>
						<RadioMenuItem mnemonicParsing="false" text="English" toggleGroup="$jezyki" />
						<RadioMenuItem mnemonicParsing="false" text="Deutsch" toggleGroup="$jezyki" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<right>
	</right>
   <right>
      <ListView fx:id="listaZamowien" prefHeight="375.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" onAction="#dostarcz" text="Dostarcz" />
              </items>
            </ContextMenu>
         </contextMenu></ListView>
   </right>
</BorderPane>
